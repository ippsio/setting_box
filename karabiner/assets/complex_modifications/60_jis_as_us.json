{
  "title": "US-Keybinding on JIS-Keyoboard behaviors",
  "rules": [
    {
      "description": "Backquote <= 'CTRL+'=' on US-Keyboard'",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "equal_sign", "modifiers": { "mandatory": [ "control" ] } },
          "to": [ { "key_code": "grave_accent_and_tilde" } ]
        }
      ]
    },
    {
      "description": "Tilde <= [SHIFT+CTRL+'=' on US-Keyboard]",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "equal_sign", "modifiers": { "mandatory": [ "control", "shift" ] } },
          "to": [ { "key_code": "grave_accent_and_tilde", "modifiers": [ "shift" ] } ]
        }
      ]
    }
  ]
}

