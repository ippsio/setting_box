{
  "title": "[30:MOUSE KEY] behaviors",
  "rules": [
    {
      "description": "[30:MOUSE KEY]: left_option+hjkl to move cursor, nm to click.",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "k", "modifiers": { "mandatory": [ "left_option" ], "optional": [ "any" ] } },
          "to": [ { "mouse_key": { "y": -1000 } } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "h", "modifiers": { "mandatory": [ "left_option" ], "optional": [ "any" ] } },
          "to": [ { "mouse_key": { "x": -1000 } } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "j", "modifiers": { "mandatory": [ "left_option" ], "optional": [ "any" ] } },
          "to": [ { "mouse_key": { "y": 1000 } } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "l", "modifiers": { "mandatory": [ "left_option" ], "optional": [ "any" ] } },
          "to": [ { "mouse_key": { "x": 1000 } } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "n", "modifiers": { "mandatory": [ "left_option" ], "optional": [ "any" ] } },
          "to": [ { "pointing_button": "button1" } ]
        },
        {
          "type": "basic",
          "from": { "key_code": "m", "modifiers": { "mandatory": [ "left_option" ], "optional": [ "any" ] } },
          "to": [ { "pointing_button": "button2" } ]
        }
      ]
    },
    {
      "description": "[31:Elecom M-DUX50BK]:",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "f1", "modifiers": { "mandatory": [ "left_command", "left_option", "left_shift" ], "optional": [ "any" ] } },
          "to": [ { "pointing_button": "button3" } ]
        }
      ]
    }
  ]
}
