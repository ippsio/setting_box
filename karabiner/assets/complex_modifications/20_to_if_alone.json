{
  "title": "[20:to_if_alone]",
  "rules": [{
    "description": "21: to_if_alone Command toggle eisuu/kana",
    "manipulators": [
      {
        "type": "basic",
        "from": { "key_code": "left_command" },
        "to": [{ "key_code": "left_command", "lazy": true }],
        "to_if_held_down": [{ "key_code": "left_command" }],
        "conditions": [{ "type": "input_source_if", "input_sources": [{ "language": "ja" }] }],
        "to_if_alone": [{ "key_code": "japanese_eisuu" }]
      },
      {
        "type": "basic",
        "from": { "key_code": "left_command" },
        "to": [{ "key_code": "left_command", "lazy": true }],
        "to_if_held_down": [{ "key_code": "left_command" }],
        "conditions": [{ "type": "input_source_if", "input_sources": [{ "language": "en" }] }],
        "to_if_alone": [{ "key_code": "japanese_kana" }]
      },
      {
        "type": "basic",
        "from": { "key_code": "right_command" },
        "to": [{ "key_code": "right_command", "lazy": true }],
        "to_if_held_down": [{ "key_code": "right_command" }],
        "conditions": [{ "type": "input_source_if", "input_sources": [{ "language": "ja" }] }],
        "to_if_alone": [{ "key_code": "japanese_eisuu" }]
      },
      {
        "type": "basic",
        "from": { "key_code": "right_command" },
        "to": [{ "key_code": "right_command", "lazy": true }],
        "to_if_held_down": [{ "key_code": "right_command" }],
        "conditions": [{ "type": "input_source_if", "input_sources": [{ "language": "en" }] }],
        "to_if_alone": [{ "key_code": "japanese_kana" }]
      }
    ]
  },
  {
    "description": "22: to_if_alone Option",
    "manipulators": [
      {
        "type": "basic",
        "from": {"key_code": "left_option"},
        "to": [ {"key_code": "left_option", "lazy": true} ],
        "to_if_held_down": [ {"key_code": "left_option"} ],
        "to_if_alone": [ {"shell_command": "~/dotfiles/bin/karabiner_elements/to_if_alone_option.sh"} ]
      },
      {
        "type": "basic",
        "from": {"key_code": "right_option"},
        "to": [ {"key_code": "right_option", "lazy": true} ],
        "to_if_held_down": [ {"key_code": "right_option"} ],
        "to_if_alone": [ {"shell_command": "~/dotfiles/bin/karabiner_elements/to_if_alone_option.sh"} ]
      }
    ]
  }]
}
