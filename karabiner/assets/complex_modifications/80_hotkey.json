{
  "title": "[80:Hotkeys]",
  "rules":
  [
    {
      "description": "[81:right_option + 's' then Slack]",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "s", "modifiers": { "mandatory": [ "right_option" ] } },
          "to": [ { "shell_command": "open -a 'Slack'" } ]
        }
      ]
    },
    {
      "description": "[82:right_option + 't' then Terminal]",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "t", "modifiers": { "mandatory": [ "right_option" ] } },
          "to": [ { "shell_command": "open -a '/System/Applications/Utilities/Terminal.app'" } ]
        }
      ]
    },
    {
      "description": "[83:right_option + 'm' then Message]",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "m", "modifiers": { "mandatory": [ "right_option" ] } },
          "to": [ { "shell_command": "open -a '/System/Applications/Messages.app/Contents/MacOS/Messages'" } ]
        }
      ]
    },
    {
      "description": "[84:right_option + 'c' then Google Chrome]",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "c", "modifiers": { "mandatory": [ "right_option" ] } },
          "to": [ { "shell_command": "open -a 'Google Chrome'" } ]
        }
      ]
    },
    {
      "description": "[85:right_option + 'e' then Microsoft Edge]",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "e", "modifiers": { "mandatory": [ "right_option" ] } },
          "to": [ { "shell_command": "open -a '/Applications/Microsoft Edge.app'" } ]
        }
      ]
    },
    {
      "description": "[86:right_option double press  then CTRL-UP (I assign this bind to start Mission Control)]",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "right_option" },
          "to": [ { "key_code": "up_arrow", "modifiers": [ "left_control" ] } ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 100,
            "basic.to_if_held_down_threshold_milliseconds": 10
          },
          "conditions": [ { "type": "variable_if", "name": "var_right_option_key", "value": 1 } ] },
        {
          "type": "basic",
          "from": { "key_code": "right_option", "modifiers": { "optional": [ "any" ] } },
          "to": [ { "set_variable": { "name": "var_right_option_key", "value": 1 } }, { "key_code": "right_option" } ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 100,
            "basic.to_if_held_down_threshold_milliseconds": 10,
            "basic.to_delayed_action_delay_milliseconds": 200
          },
          "to_delayed_action": {
            "to_if_invoked": [ { "set_variable": { "name": "var_right_option_key", "value": 0 } } ],
            "to_if_canceled": [ { "set_variable": { "name": "var_right_option_key", "value": 0 } } ]
          },
          "conditions": [ { "type": "variable_if", "name": "var_right_option_key", "value": 0 } ]
        }
      ]
    }
  ]
}

