{
  "title": "[20:option] behaviors",
  "rules": [
    {
      "description": "21: option to_if_alone: Alacritty",
      "manipulators": [
        {
          "type": "basic",
          "from": {"key_code": "left_option"},
          "to": [ {"key_code": "left_option", "lazy": true} ],
          "to_if_held_down": [ {"key_code": "left_option"} ],
          "to_if_alone": [ {"shell_command": "osascript ~/dotfiles/bin/karabiner_elements/toggle_frontmost_app.scpt Alacritty"} ]
        },
        {
          "type": "basic",
          "from": {"key_code": "right_option"},
          "to": [ {"key_code": "right_option", "lazy": true} ],
          "to_if_held_down": [ {"key_code": "right_option"} ],
          "to_if_alone": [ {"shell_command": "osascript ~/dotfiles/bin/karabiner_elements/toggle_frontmost_app.scpt Alacritty"} ]
        }
      ]
    },
    {
